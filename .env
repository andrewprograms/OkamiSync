# This is an example.
# Update if you pull 
# this repo.

# --- App ---
APP_HOST=0.0.0.0
APP_PORT=8000
ENV=dev
APP_NAME=NorenQR
ASSET_ORIGIN=http://localhost:8000

# --- Database ---
DATABASE_URL=postgresql+asyncpg://akamisync:acamisync@postgres:5432/acamisync

# --- Redis ---
REDIS_URL=redis://redis:6379/0

# --- Security ---
# Rotational HMAC keys for table/session token signing; rotate by moving K1->K0 and introducing new K1
TOKEN_KEY_K1=change-me-strong-k1
TOKEN_KEY_K0=change-me-strong-k0
SESSION_SECRET=change-me-session-secret
COOKIE_DOMAIN=localhost
CORS_ALLOWLIST=http://localhost:8000
CSP_DEFAULT_SRC='self'
CSP_IMG_SRC='self' data:
CSP_CONNECT_SRC='self'
CSRF_SALT=csrf-salt-change-me

# --- Auth ---
ADMIN_DEFAULT_USER=admin
ADMIN_DEFAULT_PASS=changemeadmin

# --- Menu ---
CURRENCY=USD
LOCALE_DEFAULT=en
LOCALES=en,ja

# --- Media ---
MEDIA_ROOT=./media
MEDIA_BASE_URL=/media
MEDIA_SIGN_KEY=change-me-media-sign

# --- Rate limiting ---
RATE_LIMIT_PUBLIC=30/minute

# --- QR ---
QR_OUTPUT_DIR=./qr
